<div class="container px-5 px-sm-0">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'list', book: @book_new, user: @user %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
              <tr>
                <td>
                  <%= link_to (image_tag @book.user.get_profile_image(100,100)), user_path(@user.id) %>
                  <br>
                  <%= link_to @book.user.name, user_path(@user.id) %>
                </td>
                <td>
                  <%= link_to @book.title, book_path(@book.id) %>
                </td>
                <td><%= @book.body %></td>
                <td>
                  <%= link_to 'Edit', edit_book_path, class: "btn btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to 'Destroy', book_path, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger" %>
                </td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
