<div class="container px-5 px-sm-0">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <img src="https://bookers-level2.herokuapp.com/rails/active_storage/representations/redirect/eyJfcmFpbHMiOnsibWVzc2FnZSI6IkJBaHBBMEJXQVE9PSIsImV4cCI6bnVsbCwicHVyIjoiYmxvYl9pZCJ9fQ==--d6654b8bb2685f1d8bc3d0328ade81c00e3db1eb/eyJfcmFpbHMiOnsibWVzc2FnZSI6IkJBaDdCem9MWm05eWJXRjBTU0lJYW5CbkJqb0dSVlE2RkhKbGMybDZaVjkwYjE5c2FXMXBkRnNIYVdscGFRPT0iLCJleHAiOm51bGwsInB1ciI6InZhcmlhdGlvbiJ9fQ==--4a929dbc7794f3c4610ba9ba5402762ad9cd1a14/default-image.jpg">
        <table class="table">
          <tbody><tr></tr>
              <tr>
                <th>name</th>
                  <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.name %></th>
              </tr>
          </tbody>
        </table>

        <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>

        <h2 class="mt-3">New book</h2>

        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label><br>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label><br>
            <%= f.text_area :body %>
          </div>
          <br>
          <div class="form-group">
            <%= f.submit 'Create Book' %>
          </div>
        <% end %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>